<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_feedback_black_36dp" />
        <TextView
            android:id="@+id/toolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵션"
            android:fontFamily="@font/jalnan"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:textColor="#cbf3f0" />
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/settingMenus"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:src="@drawable/ic_email_black_36dp"
                    android:tint="#434343" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareacr"
                    android:textColor="#FF434343"
                    android:padding="15dp"
                    android:paddingStart="30dp"
                    android:text="문의 하기"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/api_inform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:src="@drawable/ic_insert_drive_file_black_36dp"
                    android:tint="#434343" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareacr"
                    android:textColor="#FF434343"
                    android:padding="15dp"
                    android:paddingStart="30dp"
                    android:text="API 정보"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_inform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:src="@drawable/ic_person_black_36dp"
                    android:tint="#434343" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareacr"
                    android:textColor="#FF434343"
                    android:padding="15dp"
                    android:paddingStart="30dp"
                    android:text="개발자 정보"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>