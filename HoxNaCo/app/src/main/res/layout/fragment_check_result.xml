<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".CheckResultFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/jalnan"
        android:padding="7dp"
        android:text="자가 진단 결과"
        android:textAlignment="center"
        android:textColor="#FF9F1C"
        android:textSize="24sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#E9FBE7">

        <TextView
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/nanumsquareacr"
            android:text="공통적인 증상"
            android:textColor="#5E5951"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/nanumsquareacr"
            android:text="0 건"
            android:textColor="#5E5951"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/nanumsquareacr"
            android:text="드물게 나타나는 증상"
            android:textColor="#5E5951"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/r1" />

        <TextView
            android:id="@+id/result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/nanumsquareacr"
            android:text="0 건"
            android:textColor="#5E5951"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/nanumsquareacr"
            android:text="심각한 증상"
            android:textColor="#5E5951"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/r2" />

        <TextView
            android:id="@+id/result3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/nanumsquareacr"
            android:text="0 건"
            android:textColor="#5E5951"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/nanumsquareacr"
        android:text="본 진단 결과는 100% 정확한 것이 아닙니다.\n확실한 진단을 위해서는\n근처 선별진료소를 방문하시기 바랍니다."
        android:textAlignment="center"
        android:textColor="#858078"
        android:textSize="16sp" />

    <Button
        android:id="@+id/resultBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="70dp"
        android:background="#FFD595"
        android:fontFamily="@font/nanumsquareacr"
        android:text="← 뒤로 가기"
        android:textColor="#003C55" />

</LinearLayout>